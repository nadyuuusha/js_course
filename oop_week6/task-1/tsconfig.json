{
    "compilerOptions": {
      "target": "ES2018",
      "module": "CommonJS",
      "rootDir": "./src/",
      "sourceMap": true,
      "outDir": "./build",
      "removeComments": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true,
      "skipLibCheck": true
    },
    "include": ["src"]
  }